{
    "compilerOptions": {
        "esModuleInterop": true,
        "lib": ["es2015"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        // "noUnusedLocals": true,
        // "noUnusedParameters": true,
        "pretty": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "strict": true,
        "target": "es2015"
    },
    "exclude": ["test/**/*.ts"],
    "include": ["src/**/*.ts"]
}
