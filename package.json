{
	"name": "typestat",
	"description": "Converts JavaScript to TypeScript and TypeScript to better TypeScript.",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/JoshuaKGoldberg/TypeStat.git"
	},
	"license": "MIT",
	"author": "josh Goldberg",
	"main": "src/index.js",
	"bin": {
		"typestat": "bin/typestat"
	},
	"scripts": {
		"build": "tsc --build",
		"format": "prettier \"**/*\" --ignore-unknown",
		"format:write": "pnpm format --write",
		"initialize": "tsx ./src/bin/index.js --mode initialize",
		"lint": "eslint . .*js --max-warnings 0",
		"lint:knip": "knip",
		"lint:md": "markdownlint \"**/*.md\" \".github/**/*.md\" --rules sentences-per-line",
		"lint:package-json": "npmPkgJsonLint .",
		"lint:packages": "pnpm dedupe --check",
		"lint:spelling": "cspell \"**\" \".github/**/*\"",
		"prepare": "husky install",
		"should-semantic-release": "should-semantic-release --verbose",
		"test": "vitest"
	},
	"lint-staged": {
		"**/*.{js,json,md,ts,xml,yaml}": [
			"prettier --write"
		]
	},
	"devDependencies": {
		"@types/glob": "^8.1.0",
		"@types/minimatch": "^5.1.2",
		"@typescript-eslint/eslint-plugin": "^6.7.0",
		"@typescript-eslint/parser": "^6.7.0",
		"@vitest/coverage-v8": "^0.34.4",
		"console-fail-test": "^0.2.3",
		"cspell": "^7.3.5",
		"eslint": "^8.49.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-deprecation": "^1.5.0",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-import": "^2.28.1",
		"eslint-plugin-jsdoc": "^46.6.0",
		"eslint-plugin-jsonc": "^2.9.0",
		"eslint-plugin-markdown": "^3.0.1",
		"eslint-plugin-n": "^16.1.0",
		"eslint-plugin-no-only-tests": "^3.1.0",
		"eslint-plugin-perfectionist": "^2.0.1",
		"eslint-plugin-regexp": "^1.15.0",
		"eslint-plugin-vitest": "^0.3.1",
		"eslint-plugin-yml": "^1.8.0",
		"husky": "^8.0.3",
		"lint-staged": "^14.0.1",
		"markdownlint": "^0.31.0",
		"markdownlint-cli": "^0.36.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.0.3",
		"prettier-plugin-curly": "^0.1.3",
		"prettier-plugin-packagejson": "^2.4.5",
		"sentences-per-line": "^0.2.1",
		"ts-api-utils": "^1.0.3",
		"typescript": "^5.2.2",
		"vitest": "^0.34.4",
		"yaml-eslint-parser": "^1.2.2"
	},
	"packageManager": "pnpm@8.7.1",
	"engines": {
		"node": ">=18"
	}
}
