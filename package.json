		"eslint": "9.39.1",
		"eslint-plugin-jsdoc": "61.1.0",
		"eslint-plugin-jsonc": "2.21.0",
		"eslint-plugin-markdown": "5.1.0",
		"eslint-plugin-n": "17.16.1",
