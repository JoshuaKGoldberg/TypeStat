		"prettier": "3.6.0",
		"prettier-plugin-curly": "0.4.0",
		"prettier-plugin-packagejson": "2.5.8",
		"release-it": "19.0.1",
		"sentences-per-line": "0.3.0",
		"tsup": "8.5.0",
		"typescript": "5.9.2",
		"typescript-eslint": "8.27.0",
		"vitest": "3.2.1"
	},
	"packageManager": "pnpm@10.21.0",
	"engines": {
		"node": ">=18.6"
	},
	"publishConfig": {
		"provenance": true
	}
