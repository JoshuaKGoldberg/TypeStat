{
	"name": "typestat",
	"version": "0.8.17",
	"description": "Converts JavaScript to TypeScript and TypeScript to better TypeScript. ðŸ§«",
	"repository": {
		"type": "git",
		"url": "https://github.com/JoshuaKGoldberg/TypeStat"
	},
	"license": "MIT",
