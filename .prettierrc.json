{
    "arrowParens": "always",
    "parser": "typescript",
    "printWidth": 140,
    "tabWidth": 4,
    "trailingComma": "all",
    "overrides": [
        {
            "files": ".*.json",
            "options": {
                "parser": "json"
            }
        },
        {
            "files": "*.json",
            "options": {
                "parser": "json"
            }
        },
        {
            "files": ".vscode/*.json",
            "options": {
                "parser": "json"
            }
        }
    ]
}
